<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubkaus.hpisys.UpdateHist"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                  Medical History"
        android:id="@+id/texth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood Group :"
        android:id="@+id/textBG"
        android:layout_below="@+id/texth"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textColor="#b51fa6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Operated /Not"
        android:id="@+id/textOpe"
        android:layout_below="@+id/textBG"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textColor="#e91099" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eBG"
        android:layout_alignTop="@+id/textBG"
        android:layout_alignEnd="@+id/texth"
        android:layout_toEndOf="@+id/textOpe" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eOP"
        android:layout_below="@+id/eBG"
        android:layout_alignEnd="@+id/texth"
        android:layout_alignStart="@+id/eBG" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Allergy"
        android:id="@+id/textAllergy"
        android:textColor="#df148b"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eAL"
        android:layout_alignBottom="@+id/textAllergy"
        android:layout_alignEnd="@+id/texth"
        android:layout_toEndOf="@+id/textBG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/lastUpdate"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/textAllergy"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
